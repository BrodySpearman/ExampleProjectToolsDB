@app.route('/tooladder', methods=['POST'])
def tooladder():
    try:
        conn = mysql.connect()
        cursor = conn.cursor(pymysql.cursors.DictCursor)
        data = request.get_json()

        tool_id = data['data']['ToolID']
        tool_type = data['data']['Type']
        tool_name = data['data']['ToolName']
        brand = data['data']['Brand']
        sku = data['data']['SKU']
        serial_num = data['data']['SerialNum']
        description = data['data']['Description']

        cursor.execute("INSERT INTO tool (ToolID, Type, ToolName, Brand, SKU, SerialNum, Description) VALUES (%s, %s, %s, %s, %s, %s, %s)",
                       (tool_id, tool_type, tool_name, brand, sku, serial_num, description))
        conn.commit()

        response = {
            'data': {
                'ToolID': tool_id,
                'Type': tool_type,
                'ToolName': tool_name,
                'Brand': brand,
                'SKU': sku,
                'SerialNum': serial_num,
                'Description': description
            }
        }
        return jsonify(response)
    except Exception as e:
        print(e)
        return jsonify({'error': str(e)})
    finally:
        cursor.close()
        conn.close()